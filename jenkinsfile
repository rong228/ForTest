pipeline {
    agent any
    stages {
        stage ("Check www.evga.com response code") {
            steps{
                sh  '''                    
                    CODE=$(curl -o /dev/null -s -w %{http_code} https://www.evga.com)                    
                    if [ "${CODE}" = "200" ]; then
                        message="success"
                    else
                        message="fail"         
					fi
                    echo ${message}        
                '''
            }
        }
    }
}